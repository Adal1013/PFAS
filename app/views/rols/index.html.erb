<div class="container">
    <div class="row">
        <br>
        <div class="col s12">
            <div class="card-panel">
				<h5 class="center">Editar Rol</h1>
                    <p id="notice"><%= notice %></p>

                    <table class="centered highlight responsive-table">
                      <thead>
                        <tr>
                          <th>ID</th>
                          <th>Name</th>
                          <th colspan="3"></th>
                        </tr>
                      </thead>

                      <tbody>
                        <% @rols.each do |rol| %>
                          <tr>
                            <td><%= rol.id %></td>
                            <td><%= rol.name %></td>
                            <!-- <td><%= link_to 'Show', rol %></td> -->
                            <td><%= link_to 'Edit', edit_rol_path(rol), class:'btn ' %></td>
                            <td><%= link_to 'Destroy', rol, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn red' %></td>
                          </tr>
                        <% end %>
                      </tbody>
                    </table>

                    <br>

                    <%= link_to 'Crear un rol', new_rol_path, class:'btn pink' %>
            </div>
	    </div>
	</div>
</div>
